extends ../../layouts/default.pug
include ../../mixins/box-head.pug

block main 

    .container.my-3
        .card.mb-3 
            .card-header Bộ lọc và tìm kiếm 
            .card-body 
                each tag in filterTags 
                    div(class="form-check form-check-inline")
                        input(class="form-check-input" type="checkbox" id=tag value=tag)
                        label(class="form-check-label" for=tag) #{tag}
                button(class='btn btn-sm btn-primary me-2 btn-search') Tìm kiếm
                button(class='btn btn-sm btn-outline-primary btn-refresh') Refresh
        .row 
            .col-12 
                +box-head("Danh sách blog")
        
        .row 
            each item in posts
                .col-4.mb-3 
                    .post-item
                        .inner-content 
                            h1.inner-title #{item.title}
                            .inner-tags 
                                each tag in item.tags 
                                    span(class="badge text-bg-primary me-2") #{tag}
                            .inner-likes like: #{item.reactions.likes}
                            .inner-dislikes dislikes: #{item.reactions.dislikes}
                            .inner-views views: #{item.views}
            
