extends ../../layouts/default.pug

block main  
    h1(class="mb-4") Sửa sản phẩm 

    form(action=`${prefixAdmin}/products/edit` id="form-create-product" method="POST" enctype="multipart/form-data")
        div(class="form-group")
            lable(for="title") Tiêu đề
            input(type="text" class="form-control" id="title" name="title" value=product.title required)
        div(class="form-group")
            lable(for="desc") Mô tả
            textarea(type="text" class="form-control" id="desc" name="description" rows="5" ) #{product.description}
        div(class="form-group")
            lable(for="price") Giá
            input(type="number" class="form-control" id="price" name="price" value=product.price min="0")
        div(class="form-group")
            lable(for="discount") % Giảm giá
            input(type="number" class="form-control" id="discount" name="discountPercentage" value=product.discountPercentage min="0")
        div(class="form-group")
            lable(for="stock") Số lượng
            input(type="number" class="form-control" id="stock" name="stock" value=product.stock min="0")
        div(class="form-group" img-preview)
            lable(for="thumbnail") Ảnh
            input(type="file" class="form-control" id="thumbnail" name="thumbnail" accept="image/*" img-preview-input)
        img(src=product.thumbnail class="thumbnail-preview" img-preview-output)
        div(class="form-group")
            lable(for="position") Vị trí
            input(type="text" class="form-control" placeholder="Tự động tăng dần" id="position" name="position" min="1" value=product.position)
        div(class="form-group form-check form-check-inline")
            input(class="form-check-input" type="radio" name="status" id="statusActive" value="active" checked=(product.status == "active" ? true : false))
            label(class="form-check-label" for="statusActive") Hoạt động
        div(class="form-group form-check form-check-inline")
            input(class="form-check-input" type="radio" name="status" id="statusInactive" value="inactive" checked=(product.status == "inactive" ? true : false))
            label(class="form-check-label" for="statusInactive") Không hoạt động
        div(class="form-group")
            button(type="submit" class="btn btn-primary") Cập nhật

    script(src="/admin/js/products.js")