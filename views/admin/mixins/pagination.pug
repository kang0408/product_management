mixin pagination(pagination)
    nav 
        ul(class="pagination")
            if(pagination.currentPage > 1)
                li(class="page-item")
                    button(class="page-link" btn-pagination=pagination.currentPage-1) <

            if (pagination.currentPage == 1)
                - for(let i = pagination.currentPage - 1; i <= pagination.currentPage + 2; i++) 
                    if(i > 0)
                        li(class=`page-item ${pagination.currentPage == i ? "active" : ""}` )
                            button(class="page-link" btn-pagination=i) #{i}
            else if (pagination.currentPage == pagination.totalPages)
                - for(let i = pagination.currentPage - 2; i <= pagination.currentPage + 1; i++) 
                    if(i <= pagination.totalPages)
                        li(class=`page-item ${pagination.currentPage == i ? "active" : ""}` )
                            button(class="page-link" btn-pagination=i) #{i}
            else 
                - for(let i = pagination.currentPage - 1; i <= pagination.currentPage + 1; i++) 
                    li(class=`page-item ${pagination.currentPage == i ? "active" : ""}` )
                        button(class="page-link" btn-pagination=i) #{i}

            if(pagination.currentPage < pagination.totalPages)
                li(class="page-item")
                    button(class="page-link" btn-pagination=pagination.currentPage+1) >
        